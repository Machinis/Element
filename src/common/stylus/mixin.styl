border-1px($color)
  position relative
  &:after
    display:black
    position absolute
    left : 0
    bottom : 0
    width : 100%
    border-top 1px solid $color
    content : ''

border-none()
  &:after
    display: none

bg-image($url)
  background-image : url($url + "@2x.png")
  @media (-webkit-mindevice-pixel-ratio: 3),(-mindevice-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
